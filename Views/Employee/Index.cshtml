@model List<Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Address</th>
        <th>Salary</th>
        <th>Image</th>
        <th></th>
    </tr>
    @foreach (var emp in Model)
    {
        <tr>
            <td>@emp.Id</td>
            <td>@emp.Name</td>
            <td>@emp.Address</td>
            <td>@emp.Salary</td>
            <td><img src="~/Images/@emp.Img" width="100"/></td>
            <td>
                <a href="/Employee/EditEmp/@emp.Id" class="btn btn-primary">Edit</a>
                <a href="/Employee/DeleteEmp/@emp.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>

<ul>
    @foreach (var dept in ViewBag.depts)
    {
        <li>@dept</li>
    }
</ul>
@ViewBag.num
<br />
@ViewData["date"]