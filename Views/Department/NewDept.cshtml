@model Department
@{
    ViewData["Title"] = "NewDept";
}

<h1>NewDept</h1>

<form method="post">
    <div class="mb-3 mt-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control"  placeholder="Enter name" >
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ManagerName" class="form-label">Password:</label>
        <input asp-for="ManagerName" class="form-control" placeholder="Enter magr name" >
        <span asp-validation-for="ManagerName" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


