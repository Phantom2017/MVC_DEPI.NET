@model Department
@{
    ViewData["Title"] = "NewDept";
}

<h1>NewDept</h1>

<form method="post">
    <div class="mb-3 mt-3">
        <label for="deptName" class="form-label">Name:</label>
        <input type="text" class="form-control" id="deptName" placeholder="Enter name" name="Name" value="@Model.Name">
    </div>
    <div class="mb-3">
        <label for="pwd" class="form-label">Password:</label>
        <input type="text" class="form-control" id="pwd" placeholder="Enter magr name" name="ManagerName" value="@Model.ManagerName">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

